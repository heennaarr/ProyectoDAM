<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/superhero_fragment">

    <fragment
        android:id="@+id/movie_fragment"
        android:name="edu.iesam.dam2024.features.movies.presentation.MoviesFragment"
        tools:layout="@layout/fragment_movies">
        <action
            android:id="@+id/action_movie_fragment_to_movie_fragment_detail"
            app:destination="@id/movie_fragment_detail"/>
    </fragment>

    <fragment
        android:id="@+id/movie_fragment_detail"
        android:name="edu.iesam.dam2024.features.movies.presentation.MovieDetailFragment"
        tools:layout="@layout/fragment_movies_detail">
        <action
            android:id="@+id/action_movie_fragment_detail_to_movie_fragment"
            app:destination="@id/movie_fragment"/>
    </fragment>

    <fragment
        android:id="@+id/superhero_fragment"
        android:name="edu.iesam.dam2024.features.superhero.presentation.SuperHeroListFragment"
        tools:layout="@layout/fragment_superhero_list">
        <action
            android:id="@+id/action_superhero_fragment_to_superhero_fragment_detail"
            app:destination="@id/superhero_fragment_detail"/>
    </fragment>

    <fragment
        android:id="@+id/superhero_fragment_detail"
        android:name="edu.iesam.dam2024.features.superhero.presentation.SuperHeroDetailFragment"
        tools:layout="@layout/fragment_superhero_detail">
        <action
            android:id="@+id/action_superhero_fragment_detail_to_superhero_fragment"
            app:destination="@id/superhero_fragment"/>
        <argument
            android:name="superHeroId"
            app:argType="string"
            app:nullable="false" />
    </fragment>



    </navigation>